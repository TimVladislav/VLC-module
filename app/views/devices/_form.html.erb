<div class="row">
    <div class="input-field col s12">
        <%= f.label :title, "Название прибора" %>
        <%= f.text_field :title %>
    </div>
</div>
<div class="row">
    <div class="input-field col s12">
        <%= f.label :description, "Описание прибора" %>
        <%= f.text_area :description, class: 'materialize-textarea' %>
    </div>
</div>
<div class="row">
    <div class="file-field input-field">
        <div class="btn">
            <span>File</span>
            <%= f.file_field :pic %>
        </div>
        <div class="file-path-wrapper">
            <input class="file-path validate" type="text">
        </div>
    </div>
</div>




